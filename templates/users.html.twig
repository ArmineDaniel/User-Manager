{# templates/users.html.twig #}

{% extends 'base.html.twig' %}

{% block title %}Users - My Symfony App{% endblock %}

{% block content %}
    <h1>Users</h1>

    <a href="{{ path('add_user') }}">Add new user</a>

    <table border="1">
        <thead>
        <tr>
            <th>Name</th>
            <th>Email</th>
            <th>City</th>
            <th>Actions</th>
        </tr>
        </thead>
        <tbody>
        {% for user in users %}
            <tr>
                <td>{{ user.name }}</td>
                <td>{{ user.email }}</td>
                <td>{{ user.deliveryData.city }}</td>
                <td>
                    <a href="{{ path('edit_user', {'id': user.id}) }}">Edit</a>
                    |
                    <a href="#" onclick="confirmDelete('{{ path('delete_user', {'id': user.id}) }}')">Delete</a>
                </td>
            </tr>
        {% endfor %}
        </tbody>
    </table>

    <script>
        function confirmDelete(deleteUrl) {
            if (confirm('Are you sure you want to delete this user?')) {
                window.location.href = deleteUrl;
            }
        }
    </script>
{% endblock %}
